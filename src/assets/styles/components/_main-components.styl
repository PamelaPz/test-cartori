*
    margin 0
    padding 0
    box-sizing border-box
    font-family 'Montserrat', sans-serif;

.login
    height 100vh
    &::before
        content ""
        position absolute
        height 100vh
        width 1px
        background-color rgba(#707070, .15)
.wp
    &-logo
        width 50%
    &-btnLogin
        width 50%
        a
            text-decoration none
        .content-btn
            width 20rem
            border 1px solid rgba(#000, .5)
            border-radius 10px
            display flex
            justify-content: space-evenly
            align-items: center
            padding .8rem .5rem
            box-shadow 0px 3px 6px rgba(#000, .16)
            cursor pointer
            transition all .2s ease-in
            &:hover
                box-shadow 1px 2px 4px rgba(#727272, .5)
            img
                width 25px
                height 25px
.flex
    display flex
    justify-content center
    align-items center
